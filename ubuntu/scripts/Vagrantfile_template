Vagrant.configure("2") do |config|
  config.vm.provider :libvirt do |libvirt|
    libvirt.driver = "kvm"
    # libvirt.cpus = 4
    # libvirt.cputopology :sockets => '1', :cores => '4', :threads => '1'
    # libvirt.memory = 4096
    libvirt.cpu_mode = "host-passthrough"
    libvirt.nested = true
  end
end